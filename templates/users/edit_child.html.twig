{% extends 'base.html.twig' %}

{% block title %}
        Ajout d'un enfant
{% endblock %}

{% block body %}
    <div class="p-4 space-y-8 place-content-center bg-gray-900 min-h-screen">

        {% if isNewChild %}
            <h1 class="text-2xl font-bold text-white">Ajouter un enfant</h1>
            <span class="text-sm text-gray-300">Vous êtes sur le point d'ajouter un enfant pour l'inscrire a un cours de natation.</span>
        {% else %}
            <h1 class="text-2xl font-bold text-white">Modifier un enfant</h1>
            <span class="text-sm text-gray-300">Vous êtes sur le point de modifer un enfant.</span>
        {% endif %}


        {{ form_errors(childForm) }}

        {{ form_start(childForm) }}

            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(childForm.firstName, {
                    label: 'Prénom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'Jean',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(childForm.lastName, {
                    label: 'Nom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'Dupont',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(childForm.birthdate, {
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-black focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

            </div>
            {% if isNewChild %}
                <button type="submit" class="mt-6 w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500">
                    Ajouter
                </button>
            {% else %}
                <button type="submit" class="mt-6 w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500">
                    Modifier
                </button>
            {% endif %}
        {{ form_end(childForm) }}

        {% if isNewChild %}
            <span class="mt-6 block w-full text-center text-sm text-gray-500 dark:text-gray-400">
                Vous souhaitez annuler l'ajout d'un enfant ? <a href="{{ path('app_user') }}" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">Retour à votre compte</a>
            </span>
        {% else %}
            <span class="mt-6 block w-full text-center text-sm text-gray-500 dark:text-gray-400">
                Vous souhaitez annuler la modification d'un enfant ? <a href="{{ path('app_user') }}" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">Retour à votre compte</a>
            </span>
        {% endif %}
    </div>
{% endblock %}
