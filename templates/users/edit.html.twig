{% extends 'base.html.twig' %}

{% block title %}
    {% if isAnonymous %}
        Inscription
    {% else %}
        Modification de votre profil
    {% endif %}
{% endblock %}

{% block body %}
    <div class="p-4 space-y-8 place-content-center bg-gray-900 min-h-screen">

        {% if isAnonymous %}
            <h1 class="text-2xl font-bold text-white">Inscription</h1>
            <span class="text-sm text-gray-300">Vous êtes sur le point de créer un compte sur le site des clubs de plage de Royan. Veuillez remplir le formulaire ci-dessous pour vous inscrire.</span>
        {% else %}
            <h1 class="text-2xl font-bold text-white">Modification de votre profil</h1>
            <span class="text-sm text-gray-300">Vous êtes sur le point de modifier votre profil.</span>
        {% endif %}

        {{ form_errors(userForm) }}

        {{ form_start(userForm) }}

            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(userForm.firstName, {
                    label: 'Prénom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'Jean',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(userForm.lastName, {
                    label: 'Nom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'Dupont',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(userForm.address, {
                    label: 'Adresse postale à Royan',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'Plage de pontaillac, 17200 Royan',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(userForm.phoneNumber, {
                    label: 'Numéro de téléphone',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: '+ XX X XX XX XX XX',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

            </div>
            <div class="space-y-6">

                {{ form_row(userForm.mail, {
                    label: 'Adresse mail',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: 'exemple@clubdeplageroyan.fr',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(userForm.password, {
                    label: 'Mot de passe',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: '********',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {{ form_row(userForm.passwordConfirm, {
                    label: 'Confirmation du mot de passe',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-white"
                    },
                    attr: {
                        placeholder: '********',
                        class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
                    }
                }) }}

                {% if isAnonymous %}
                    {{ form_row(userForm.agreeTerms, {
                        label: 'J\'accepte les conditions d\'utilisation',
                        row_attr: {
                            class: 'flex items-center'
                        },
                        label_attr: {
                            class: "text-sm font-medium text-gray-300"
                        },
                        attr: {
                            class: "rounded ml-2 border bg-gray-700 border-gray-600 focus:ring-3 focus:ring-blue-600 ring-offset-gray-800"
                        }
                    }) }}
                {% endif %}

            </div>

            {% if isAnonymous %}
                <button type="submit" class="mt-6 w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500">
                    S'inscrire
                </button>
            {% else %}
                <button type="submit" class="mt-6 w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500">
                    Mettre à jour
                </button>
            {% endif %}
        {{ form_end(userForm) }}

        {% if isAnonymous %}
            <span class="mt-6 block w-full text-center text-sm text-gray-400">
                Déjà inscrit ? <a href="{{ path('app_login') }}" class="font-medium text-blue-400 hover:text-blue-300">Se connecter</a>
            </span>
        {% else %}
            <span class="mt-6 block w-full text-center text-sm text-gray-400">
                Vous souhaitez annuler la modification de votre profil ? <a href="{{ path('app_user') }}" class="font-medium text-blue-400 hover:text-blue-300 hover:underline">Retour à votre compte</a>
            </span>
        {% endif %}

    </div>
{% endblock %}
