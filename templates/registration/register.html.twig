{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="p-4 space-y-8 place-content-center bg-gray-900 min-h-screen">

        <h1 class="text-2xl font-bold text-white">Inscription</h1>
        <span class="text-sm text-gray-300">Vous êtes sur le point de créer un compte sur le site des clubs de plage de Royan. Veuillez remplir le formulaire ci-dessous pour vous inscrire.</span>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(registrationForm.firstName, {
                    label: 'Prénom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: 'Jean',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.lastName, {
                    label: 'Nom',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: 'Dupont',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.address, {
                    label: 'Adresse postale à Royan',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: 'Plage de pontaillac, 17200 Royan',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.phoneNumber, {
                    label: 'Numéro de téléphone',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: '+ XX X XX XX XX XX',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

            </div>
            <div class="space-y-6">

                {{ form_row(registrationForm.mail, {
                    label: 'Adresse mail',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: 'exemple@clubdeplageroyan.fr',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: '********',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.plainPasswordConfirm, {
                    label: 'Confirmation du mot de passe',
                    label_attr: {
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    },
                    attr: {
                        placeholder: '********',
                        class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    }
                }) }}

                {{ form_row(registrationForm.agreeTerms, {
                    label: 'J\'accepte les conditions d\'utilisation',
                    row_attr: {
                        class: 'flex items-center'
                    },
                    label_attr: {
                        class: "text-sm font-medium text-gray-900 dark:text-gray-300"
                    },
                    attr: {
                        class: "ml-2 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800"
                    }
                }) }}

            </div>

            <button type="submit" class="mt-6 w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500">
                S'inscrire
            </button>
        {{ form_end(registrationForm) }}

        <span class="mt-6 block w-full text-center text-sm text-gray-500 dark:text-gray-400">
            Déjà inscrit ? <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">Se connecter</a>
        </span>

    </div>
{% endblock %}
